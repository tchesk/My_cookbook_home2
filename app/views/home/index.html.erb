<h1> CookBook </h1>
<p>'Bem-vindo ao maior livro de receitas online'</p>

<% if user_signed_in? %>
    <p><%= "Seja bem-vindo #{current_user.email}" %></p>
 <% end %>

<%= link_to 'Enviar uma receita', new_recipe_path %>
<%= link_to 'Registrar', new_user_session_path%>

<% @recipes.each do |recipe|%>
  <h1><%= link_to recipe.title, recipe_path(recipe.id) %></h1>
  <ul>
    <li><%= recipe.recipe_type.name %></li>
    <li><%= recipe.cuisine.name %></li>
    <li><%= recipe.difficulty %></li>
    <li><%= recipe.cook_time %> minutos </li>
  </ul>
<% end %>

<% @recipe_types.each do |recipe_type| %>
  <%= link_to recipe_type.name, recipe_type_path(recipe_type.id) %>
  <% end %>

<% @cuisines.each do |cuisine| %>
  <%= link_to cuisine.name, cuisine_path(cuisine.id)  %>
<% end  %>
